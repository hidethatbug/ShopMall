<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="151dp"
    android:layout_height="174dp"
    android:paddingTop="15dp"
    android:layout_margin="10dp"
    android:paddingBottom="15dp"
    app:cardCornerRadius="8dp"
    android:paddingLeft="10dp"
    app:cardElevation="@dimen/textandiconmargin"
    android:paddingRight="10dp"
    app:cardBackgroundColor="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/moon"
            android:id="@+id/home_item_pzsh_shopimg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="131dp"
            android:layout_height="102dp" />
        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textSize="12sp"
            android:text="sds"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:id="@+id/home_item_pzsh_shopname"
            app:layout_constraintLeft_toRightOf="@+id/home_item_pzsh_shopimg"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10dp"
            android:textColor="#ff0000"
            android:id="@+id/home_item_pzsh_shopprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</android.support.v7.widget.CardView>