<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:hint="手机号"
        android:id="@+id/edit_phone_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_verification_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edit_phone_register" />

    <EditText
        android:hint="密码"
        android:id="@+id/edit_pwd_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edit_verification_register" />


    <Button
        android:id="@+id/but_registerW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/but_register"
        app:layout_constraintTop_toBottomOf="@+id/edit_pwd_register" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        app:layout_constraintTop_toBottomOf="@+id/but_registerW">

        <TextView
            android:id="@+id/text_jump_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/text_jump_login" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>