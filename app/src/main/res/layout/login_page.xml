<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_phone_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_pwd_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edit_phone_login" />

    <Button
        android:id="@+id/but_loginW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/but_login"
        app:layout_constraintTop_toBottomOf="@+id/edit_pwd_login" />
    <RelativeLayout
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/but_loginW"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/text_jump_reg"
            android:layout_centerVertical="true"
            android:text="@string/text_jump_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <CheckBox
            android:id="@+id/check_rem_num"
            android:layout_centerVertical="true"
            android:text="@string/check_rem_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>